@{
    ViewBag.Title = "Employee Loan Approvals";
    Layout = "~/Views/Shared/Layout/_adminPayrollLayout.cshtml";
}


<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="#"> Data Entry </a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("EmployeeLoanApprovals","PayrollDataEntry")"> Employee Loan Approvals </a></li>
</ul>

<div class="content-i" id="app">
    <div class="content-box">
        <div class="element-wrapper">
            <h6 class="element-header"> Employee Loan Approvals </h6>
            <div class="element-box">
                <div class="table-responsive" style="height:auto;width:auto;min-height:500px;">

                    <div class="row">

                        <div class="col-sm-2">  </div>

                       <div class="col-sm-2 mx-3">

                            <div class="form-group text-center" style="width: 180px; border: 1px solid #cacfe7; border-radius: 10px; padding: 0.75rem 1rem; justify-content: center">
                                <div class="radio" style="width: 150px; display: inline-block;">
                                    <label><input type="radio" v-model="approvalType" name="ApprovalType" value="approve"> &nbsp;&nbsp; <b> Approve </b></label>
                                </div>
                                <div class="radio" style="width: 150px; display: inline-block;">
                                    <label><input type="radio" v-model="approvalType" name="ApprovalType" value="reject"> &nbsp;&nbsp; <b>  Reject </b></label>
                                </div>
                            </div>
                       </div>


                        <div class="col-sm-2">

                            <div class="form-group">
                                <br />
                                <button type="button" :disabled="isLoading" class="alignright btn btn-primary mt-2" v-on:click="manageApproval()">
                                    
                                    Submit
                                   
                                    <div class="spinner-border" v-if="isLoading" role="status" aria-hidden="true" style="width: 20px; height: 20px"></div>
                                </button>

                            </div>

                        </div>

                    </div>

                    <hr />
                    <div id="dataTable"></div>

                </div>

            </div>
        </div>

    </div>
</div>

<script src="~/js/payroll/data-entry/employee-loan-approvals.js" asp-append-version="true"></script>