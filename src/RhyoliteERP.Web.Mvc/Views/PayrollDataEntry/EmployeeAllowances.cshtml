@{
    ViewBag.Title = "Employee Allowances";
    Layout = "~/Views/Shared/Layout/_adminPayrollLayout.cshtml";
}


<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="#"> Data Entry </a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("EmployeeAllowances","PayrollDataEntry")"> Employee Allowances </a></li>
</ul>

<div class="content-i" id="app">
    <div class="content-box">
        <div class="element-wrapper">
            <h6 class="element-header"> Employee Allowances </h6>
            <div class="element-box">
                <div class="table-responsive" style="height:auto;width:auto;min-height:500px;">

                    <fieldset class="form-group">
                        <legend><span> Search </span></legend>

                        <div class="row">

                            <div class="col-sm-4"></div>
                            <div class="col-sm-4">

                                <div class="form-group">
                                    <label> <strong> Select Employee: </strong>  </label>
                                    <input id="employeeId" v-model="employeeId" type="text" class="form-control" />

                                </div>

                            </div>
                            <div class="col-sm-4"></div>

                        </div>

                    </fieldset>

                    <hr />
                    <div id="dataTable"></div>

                </div>

            </div>
        </div>

    </div>
</div>

<script src="~/js/payroll/data-entry/employee-allowances.js" asp-append-version="true"></script>
