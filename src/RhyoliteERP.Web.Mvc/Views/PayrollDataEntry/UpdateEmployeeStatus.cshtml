@{
    ViewBag.Title = "Update Employee Status";
    Layout = "~/Views/Shared/Layout/_adminPayrollLayout.cshtml";
}
<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="#"> Data Entry </a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("UpdateEmployeeStatus","PayrollDataEntry")"> Update Employee Status </a></li>
</ul>

<div class="content-i" id="app">
    <div class="content-box">
        <div class="element-wrapper">
            <h6 class="element-header"> Update Employee Status </h6>
            <div class="element-box">
                <div class="table-responsive" style="height:auto;width:auto;min-height:205px;">

                    <div class="row">

                        <div class="col-sm-1">  </div>

                        <div class="col-sm-4">

                            <div class="form-group">
                                <label> <strong> Select Employee: </strong>  </label>
                                 <input id="employeeId" v-model="employeeId" type="text" class="form-control" />

                            </div>

                            <div class="form-group">
                                <label> <strong> Employee Status: </strong>  </label>
                                <select class="form-control mb-3" v-model="statusId" ref="statusId">
                                    <option value=""> Select Status </option>
                                    <option :value="status.id" v-for="status in statusList"> {{status.name}} </option>
                                </select>
                            </div>


                        </div>

                    </div>
                    <div class="row">
                        <div class="col-sm-1">  </div>
                        <div class="col-sm-5">
                            <button type="button" class="btn btn-primary" :disabled="isLoading" v-on:click="updateEmployeeStatus()">
                                Update

                                 <div class="spinner-border" v-if="isLoading" role="status" aria-hidden="true" style="width: 20px; height: 20px"></div>

                            </button>

                        </div>


                    </div>

                </div>

            </div>
        </div>

    </div>
</div>

<script src="~/libs/vuelidate/vuelidate.min.js"></script>
<script src="~/libs/vuelidate/validators.min.js"></script>

<script src="~/js/payroll/data-entry/update-employee-status.js" asp-append-version="true"></script>
