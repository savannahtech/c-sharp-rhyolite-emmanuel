@{
    ViewBag.Title = "Bill Setups";
    Layout = "~/Views/Shared/Layout/_adminSchLayout.cshtml";
}


<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Setups</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("BillSetups","SchSetups")"> Bill Setups </a></li>
</ul>

<div class="content-i" id="app">
    <div class="content-box">
        <div class="element-wrapper">
            <h6 class="element-header"> Bill Setups </h6>
            <div class="element-box">
                <div class="table-responsive" style="height:auto;width:auto;min-height:412px;">

                      <div class="row">

                            <div class="col-sm-3">

                                <div class="form-group">
                                    <label>  <b>Academic Year: </b>  </label>
                                    <select class="form-control mb-3" v-model="selectedAcademicYearId" v-on:change="getSetupData()">
                                        <option value="">Select Academic Year</option>
                                        <option :value="academicYear.id" v-for="academicYear in academicYearList"> {{academicYear.name}} </option>
                                    </select>
                                </div>

                            </div>

                            <div class="col-sm-3">

                                <div class="form-group">
                                    <label> <b> Terms:</b>  </label>
                                    <select class="form-control mb-3" v-model="selectedTermId" v-on:change="getSetupData()">
                                        <option value="">Select Term </option>
                                        <option :value="term.id" v-for="term in termList"> {{term.name}} </option>
                                    </select>
                                </div>

                            </div>

                            <div class="col-sm-3">

                                <div class="form-group">
                                    <label> <b> Class: </b>  </label>
                                    <select class="form-control mb-3" v-model="selectedClassId" v-on:change="getSetupData()">
                                        <option value="">Select Class</option>
                                        <option :value="schClass.id" v-for="schClass in classList"> {{schClass.className}} </option>
                                    </select>
                                </div>

                            </div>

                            <div class="col-sm-3">

                                <div class="form-group">
                                    <label>  <b> Bill Types: </b>  </label>
                                    <select class="form-control mb-3" v-model="selectedBillTypeId">
                                        <option value=""> Select Bill Type </option>
                                        <option :value="billType.id" v-for="billType in billTypeList"> {{billType.name}} </option>
                                    </select>
                                </div>

                            </div>

                        </div>

                        <hr />

                        <div class="row">

                            <div class="col-sm-2"></div>

                            <div class="col-sm-3">

                                <div class="form-group">
                                    <label> <b>Fee: </b>  </label>
                                    <select class="form-control mb-3" v-model="selectedFeeId">
                                        <option value=""> Select Fee </option>
                                        <option :value="feeDescription.id" v-for="feeDescription in feesDescriptionList"> {{feeDescription.description}} </option>
                                    </select>

                                </div>

                            </div>

                            <div class="col-sm-2">
                                <div class="form-group">

                                    <label>  <b>Amount: </b> </label>
                                    <input v-model="feeAmount" type="number" class="form-control" />

                                </div>
                            </div>

                            <div class="col-sm-2">

                                <div class="form-group">

                                    <br />
                                    <button type="button" v-on:click="saveBillSetup()" class="btn btn-primary mt-2">
                                        Save

                                        <i class="fa fa-spinner fa-spin" v-if="isLoading"></i>
 
                                    </button>

                                </div>
                            </div>
                        </div>

                        <hr />

                    <div id="dataTable"></div>
                </div>

            </div>
        </div>


    </div>
</div>

<script src="~/js/school-manager/setups/bill-setups.js" asp-append-version="true"></script>
