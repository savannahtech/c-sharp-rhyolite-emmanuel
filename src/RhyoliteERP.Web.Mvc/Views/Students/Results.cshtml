@{
    ViewBag.Title = "Results";
    Layout = "~/Views/Shared/Layout/_adminSchLayout.cshtml";
}


<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Students</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Attendance","Students")"> Results </a></li>
</ul>

<div class="content-i" id="app">
    <div class="content-box">
        <div class="element-wrapper">
            <h6 class="element-header"> Results </h6>
            <div class="element-box">
                <div class="table-responsive" style="height:auto;width:auto;min-height:412px;">

                    <div class="row">

                        <div class="col-sm-3">

                            <div class="form-group">
                                <label> <b> <strong> Academic Year: </strong> </b>  </label>
                                <select class="form-control mb-3" v-model="academicYearId" ref="academicYearId" v-on:change="getResults()">
                                    <option value="">Select Academic Year</option>
                                    <option :value="academicYear.id" v-for="academicYear in academicYearList">{{academicYear.name}}</option>
                                </select>
                            </div>

                        </div>

                        <div class="col-sm-2">

                            <div class="form-group">
                                <label> <b> <strong> Term: </strong> </b> </label>
                                <select class="form-control mb-3" v-model="termId" v-on:change="getResults()">
                                    <option value="">Select Term </option>
                                    <option :value="term.id" v-for="term in termList"> {{term.name}} </option>
                                </select>

                            </div>

                        </div>

                        <div class="col-sm-2">

                            <div class="form-group">
                                <label> <b> <strong> Class: </strong> </b>  </label>
                                <select class="form-control mb-3" v-model="classId" v-on:change="getResultTypes()">
                                    <option value="">Select Class</option>
                                    <option :value="schClass.id" v-for="schClass in classList"> {{schClass.className}} </option>
                                </select>
                            </div>

                        </div>

                        <div class="col-sm-3">

                            <div class="form-group">
                                <label> <b> <strong> Subject: </strong> </b>  </label>
                                <select class="form-control mb-3" v-model="subjectId" v-on:change="getResults()">
                                    <option value=""> Select Subject </option>
                                    <option :value="subject.id" v-for="subject in subjectList"> {{subject.name}} </option>
                                </select>
                            </div>

                        </div>

                        <div class="col-sm-2">

                            <div class="form-group">
                                <label> <b> <strong> Result Type: </strong> </b>  </label>
                                <select class="form-control mb-3" v-model="resultTypeId" v-on:change="getResults()">
                                    <option value=""> Select Result Type </option>
                                    <option :value="resultType.id" v-for="resultType in resultTypeList"> {{resultType.name}} </option>
                                </select>
                            </div>

                        </div>


                    </div>

                    <hr />

                    <div id="dataTable"></div>

                </div>

            </div>
        </div>


    </div>
</div>

<script src="~/libs/vuelidate/vuelidate.min.js"></script>
<script src="~/libs/vuelidate/validators.min.js"></script>

<script src="~/js/school-manager/students/results.js" asp-append-version="true"></script>
