@{
    ViewBag.Title = "Promotion";
    Layout = "~/Views/Shared/Layout/_adminSchLayout.cshtml";
}


<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Setups</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Promotion","Students")"> Promotion </a></li>
</ul>

<div class="content-i" id="app">
    <div class="content-box">
        <div class="element-wrapper">
            <h6 class="element-header"> Promotion </h6>
            <div class="element-box">
                <div class="table-responsive" style="height:auto;width:auto;min-height:412px;">

                    <div class="row">

                        <div class="col-sm-1">
                        </div>

                        <div class="col-sm-3">

                            <div class="form-group">
                                <label> <b> <strong> Promote From: </strong> </b>  </label>
                                <select class="form-control mb-3" v-model="promotedFromClassId" ref="promotedFromClassId">
                                    <option value="">Select Class</option>
                                    <option :value="schClass.id" v-for="schClass in classList">{{schClass.className}}</option>
                                </select>
                            </div>

                        </div>

                        <div class="col-sm-3">

                            <div class="form-group">
                                <label> <b>  <strong> Promote To: </strong> </b>  </label>
                                <select class="form-control mb-3" v-model="promotedToClassId" ref="promotedToClassId">
                                    <option value="">Select Class</option>
                                    <option :value="schClass.id" v-for="schClass in classList">{{schClass.className}}</option>
                                </select>
                            </div>

                        </div>


                        <div class="col-sm-3">

                            <div class="form-group">
                                <label> <b> <strong> Date: </strong> </b>  </label>
                                <input type="date" ref="datePromoted" class="form-control" v-model="datePromoted">

                            </div>

                        </div>

                        <div class="col-sm-2">

                            <div class="form-group">
                                <br />
                                <button type="button" v-on:click="promoteStudents()" class="btn btn-primary mt-2">
                                    Promote

                                    <i class="fa fa-spinner fa-spin" v-if="isLoading"></i>
                                </button>

                            </div>

                        </div>

                    </div>

                    <hr />

                    <div id="dataTable"></div>

                </div>

            </div>
        </div>


    </div>
</div>

<script src="~/libs/vuelidate/vuelidate.min.js"></script>
<script src="~/libs/vuelidate/validators.min.js"></script>

<script src="~/js/school-manager/students/promotion.js" asp-append-version="true"></script>