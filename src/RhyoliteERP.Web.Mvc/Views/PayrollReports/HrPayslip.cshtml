@{
    ViewBag.Title = "Reports | PaySlip";
    Layout = "~/Views/Shared/Layout/_adminPayrollLayout.cshtml";
}

<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="#"> Historical Reports</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("HrPayslip","PayrollReports")"> PaySlip </a></li>
</ul>

<div class="content-i" id="app">
    <div class="content-box">
        <div class="element-wrapper">
            <h6 class="element-header"> PaySlip </h6>
            <div class="element-box">
                <div class="table-responsive" style="height:auto;width:auto;min-height:500px;">

                    <div class="row">


                        <div class="col-sm-3 ">

                            <div class="form-group">
                                <label> <strong> Select Report Type : </strong>  </label>
                                <select class="form-control" v-model="payslipType" ref="payslipType">
                                    <option value="basic"> Basic </option>
                                    <option value="type-i"> Type I </option>
                                    <option value="type-ii"> Type II </option>
                                    <option value="type-iii"> Type III </option>

                                </select>

                            </div>

                        </div>

                        <div class="col-sm-2">

                            <div class="form-group">
                                <label> <strong> Month: </strong>  </label>

                                <select class="form-control mb-3" v-model="month" v-on:change="getReportData()">
                                    <option value="1"> January </option>
                                    <option value="2"> February </option>
                                    <option value="3"> March </option>
                                    <option value="4"> April </option>
                                    <option value="5"> May </option>
                                    <option value="6"> June </option>
                                    <option value="7"> July </option>
                                    <option value="8"> August </option>
                                    <option value="9"> September </option>
                                    <option value="10"> October </option>
                                    <option value="11"> November </option>
                                    <option value="12"> December </option>
                                </select>

                            </div>

                        </div>

                        <div class="col-sm-2">

                            <div class="form-group">
                                <label> <strong> Year: </strong>  </label>
                                <input type="number" class="form-control" v-model="year" placeholder="@DateTime.Now.Year">
                            </div>

                        </div>
                        <div class="col-sm-3"> 
                            
                            <div class="form-group">

                                <label> <strong> Select Employee: </strong>  </label>

                                <input id="employeeId" v-model="employeeId" type="text" class="form-control" />

                             </div>
                        
                        </div>

                        <div class="col-sm-2">

                            <div class="form-group">
                                <br />
                                <button type="button" class="alignright btn btn-primary mt-2" v-on:click="getReportData()"> Search </button>

                            </div>

                        </div>

                    </div>

                    <hr />

                    <div style="height:auto;width:auto;min-height:500px;" id="reportView">  </div>

                </div>

            </div>
        </div>


    </div>
</div>

<script src="~/js/payroll/historical-reports/payslip.js" asp-append-version="true"></script>