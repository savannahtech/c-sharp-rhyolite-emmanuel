@{
    ViewBag.Title = "Reports | Monthly Loan Payout";
    Layout = "~/Views/Shared/Layout/_adminPayrollLayout.cshtml";
}

<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="#"> Monthly Reports</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("MrLoanDeductions","PayrollReports")"> Monthly Loan Payout </a></li>
</ul>

<div class="content-i" id="app">
    <div class="content-box">
        <div class="element-wrapper">
            <h6 class="element-header"> Monthly Loan Payout </h6>
            <div class="element-box">
                <div class="table-responsive" style="height:auto;width:auto;min-height:500px;">

                    <div class="row">

                        <div class="col-sm-2">  </div>

                        <div class="col-sm-3">

                            <div class="form-group">

                                <label> <strong> Select Loan Type: </strong>  </label>
                                <select class="form-control mb-3" v-model="loanTypeId" ref="loanTypeId">
                                    <option value=""> Loan Type </option>
                                    <option :value="loanType.id" v-for="loanType in loanTypeList"> {{loanType.name}} </option>
                                </select>

                            </div>

                        </div>


                        <div class="col-sm-2">

                            <div class="form-group">
                                <br />
                                <button type="button" class="alignright btn btn-primary mt-2" v-on:click="getReportData()"> Search </button>

                            </div>

                        </div>

                    </div>

                    <hr />

                    <div style="height:auto;width:auto;min-height:500px;" id="reportView">  </div>

                </div>

            </div>
        </div>


    </div>
</div>

<script src="~/js/payroll/monthly-reports/monthly-loan-payout.js" asp-append-version="true"></script>