@{
    ViewBag.Title = "Cost Centers";
    Layout = "~/Views/Shared/Layout/_adminLedgerLayout.cshtml";
}


<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Shared Resource</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("CostCenters","PayrollSharedResource")"> Cost Centers </a></li>
</ul>

<div class="content-i" id="app">
    <div class="content-box">
        <div class="element-wrapper">
            <h6 class="element-header"> Cost Centers </h6>
            <div class="element-box">
                <div class="table-responsive" style="height:auto;width:auto;min-height:412px;">

                      <div class="row">

                            <div class="col-sm-2">
                            </div>
                            <div class="col-sm-3">

                                <div class="form-group">
                                    <label> <strong> Cost Center: </strong> </label>
                                    <input type="text" class="form-control" v-model="name" id="name" placeholder="Cost Center">

                                </div>

                            </div>

                            <div class="col-sm-3">

                                <div class="form-group">
                                    <label> <strong> Parent Hierachy: </strong>  </label>
                                    <select class="form-control" v-model="parentId" type="text">
                                        <option value=""> Select Parent Hierachy </option>
                                        <option :value="costCenter.id" v-for="costCenter in costCenterHierachyList"> {{costCenter.name}} </option>
                                    </select>
                                </div>

                            </div>

                            <div class="col-sm-2 mt-2">
                                <div class="form-group">
                                    <br />
                                    <button type="button" v-on:click="saveCostCenter()" :disabled="isLoading" class="btn btn-primary">
                                        Save

                                        <i class="fa fa-spinner fa-spin" v-if="isLoading"></i>
                                    </button>

                                </div>

                            </div>

                        </div>
                        <hr />

                    <div id="dataTable"></div>
                </div>

            </div>
        </div>


    </div>
</div>

<script src="~/js/shared/cost-centers.js" asp-append-version="true"></script>