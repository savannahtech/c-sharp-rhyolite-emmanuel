@{
    ViewBag.Title = "Parents & Wards";
    Layout = "~/Views/Shared/Layout/_adminSchLayout.cshtml";
}


<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="#"> Parents </a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Levels","SchSetups")"> Parents &amp; Wards </a></li>
</ul>

<div class="content-i" id="app">
    <div class="content-box">
        <div class="element-wrapper">
            <h6 class="element-header"> Parents &amp; Wards </h6>
            <div class="element-box">
                <div class="table-responsive" style="height:auto;width:auto;min-height:412px;">

                    <div class="row">

                         <div class="col-sm-2"> </div>

                        <div class="col-sm-3">

                            <div class="form-group">
                                <label> <strong> Class: </strong>  </label>
                                <select class="form-control mb-3" v-model="selectedClassId" v-on:change="getStudents()">
                                    <option value="">Select Class</option>
                                    <option :value="schClass.id" v-for="schClass in classList"> {{schClass.className}} </option>
                                </select>

                            </div>

                        </div>

                        <div class="col-sm-4">

                            <div class="form-group">
                                <label> <strong> Student: </strong>  </label>
                                <select class="form-control mb-3" v-model="selectedStudentId">
                                    <option value="">Select Student</option>
                                    <option :value="student.id" v-for="student in studentList">{{student.firstName}} {{student.lastName}} ({{student.studentIdentifier}})</option>
                                </select>

                            </div>

                        </div>

                        <div class="col-sm-2">

                            <div class="form-group">
                                <br />
                                <button type="button" :disabled="isLoading || !selectedStudentId" v-on:click="assignParentWard()" class="alignright btn btn-primary mt-2">
                                     
                                    Save
                                    <i class="fa fa-spinner fa-spin" v-if="isLoading"></i>

                                </button>

                            </div>

                        </div>

                    </div>

                    <hr />

                    <div id="dataTable"></div>

                </div>

            </div>
        </div>


    </div>
</div>

<script src="~/js/school-manager/parents/wards.js" asp-append-version="true"></script>