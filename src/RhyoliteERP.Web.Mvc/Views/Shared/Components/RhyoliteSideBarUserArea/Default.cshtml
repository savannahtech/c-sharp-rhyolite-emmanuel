@using RhyoliteERP.Web.Views.Shared.Components.RhyoliteSideBarUserArea;
@model RhyoliteSideBarUserAreaViewModel


<div class="logged-user-i">
    <div class="avatar-w"> <img alt="" src="https://res.cloudinary.com/rhyoliteprime/image/upload/v1533814738/images_6.png"> </div>
    <div class="logged-user-info-w">
        <div class="logged-user-name"> @Html.Raw(Model.GetShownLoginName()) </div>
        <div class="logged-user-role"> @Html.Raw(Model.GetShownRoleName()) </div>
    </div>
    <div class="logged-user-toggler-arrow">
        <div class="os-icon os-icon-chevron-down"></div>
    </div>
    <div class="logged-user-menu color-style-bright">
        <div class="logged-user-avatar-info">
            <div class="avatar-w"><img alt="" src="https://res.cloudinary.com/rhyoliteprime/image/upload/v1533814738/images_6.png"></div>
            <div class="logged-user-info-w">
                <div class="logged-user-name"> @Html.Raw(Model.GetShownLoginName())  </div>
                <div class="logged-user-role"> @Html.Raw(Model.GetShownRoleName()) </div>
            </div>
        </div>
        <div class="bg-icon"><i class="os-icon os-icon-wallet-loaded"></i></div>
        <ul>
            <li><a href="@Url.Action("Profile", "Manage")"><i class="os-icon os-icon-user-male-circle2"></i><span> Profile Details </span></a></li>
            <li><a href="@Url.Action("Users", "Manage")"><i class="os-icon os-icon-users"></i><span> Manage Users </span></a></li>
            <li><a href="@Url.Action("UpdatePassword", "Manage")"><i class="os-icon os-icon-shield"></i><span> Change Password </span></a></li>
            <li><a href="@Url.Action("Logout", "Account")"><i class="os-icon os-icon-signs-11"></i><span>Logout</span></a></li>
        </ul>
    </div>
</div>
