@{
    ViewBag.Title = "Enquiries | Student Attendance";
    Layout = "~/Views/Shared/Layout/_adminSchLayout.cshtml";
}


<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Enquiries</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("StudentAttendance","SchEnquiries")"> Student Attendance </a></li>
</ul>

<div class="content-i" id="app">
    <div class="content-box">
        <div class="element-wrapper">
            <h6 class="element-header"> Student Attendance </h6>
            <div class="element-box">
                <div class="table-responsive" style="height:auto;width:auto;min-height:500px;">


                    <div class="row">

                        <div class="col-sm-1"></div>

                        <div class="col-sm-3">

                            <div class="form-group">
                                <label> <strong> Class: </strong>  </label>
                                <select class="form-control mb-3" v-model="selectedClassId" v-on:change="getData()">
                                    <option value="">Select Class</option>
                                    <option :value="schClass.id" v-for="schClass in classList"> {{schClass.className}} </option>
                                </select>
                            </div>

                        </div>


                        <div class="col-sm-3">

                            <div class="form-group">
                                <label> <strong> Start Date: </strong>  </label>
                                <input v-model="startDate" type="date" class="form-control" v-on:change="getData()" />

                            </div>

                        </div>


                        <div class="col-sm-3">

                            <div class="form-group">
                                <label> <strong> End Date: </strong>  </label>
                                <input v-model="endDate" type="date" class="form-control" v-on:change="getData()" />

                            </div>

                        </div>


                    </div>

                    <hr />

                    <div id="dataTable"></div>


                </div>

            </div>
        </div>

    </div>
</div>

<script src="~/js/school-manager/enquiries/student-attendance.js" asp-append-version="true"></script>