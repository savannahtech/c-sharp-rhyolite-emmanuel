@{
    ViewBag.Title = "Enquiries | Student By Nationality";
    Layout = "~/Views/Shared/Layout/_adminSchLayout.cshtml";
}


<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Enquiries</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("StudentsByClass","SchEnquiries")"> Students By Nationality </a></li>
</ul>

<div class="content-i" id="app">
    <div class="content-box">
        <div class="element-wrapper">
            <h6 class="element-header"> Students By Nationality </h6>
            <div class="element-box">
                <div class="table-responsive" style="height:auto;width:auto;min-height:500px;">

                    <div class="row">

                        <div class="col-sm-3"></div>

                        <div class="col-sm-3">

                            <div class="form-group">
                                <label> <strong> Nationality: </strong>  </label>
                                <select class="form-control mb-3" v-model="selectedNationalityId" ref="selectedNationalityId" v-on:change="getData()">
                                    <option value="">Select Nationality</option>
                                    <option :value="country.id" v-for="country in nationalityList">{{country.nationality}}</option>
                                </select>

                            </div>

                        </div>


                    </div>

                    <hr />
                    <div id="dataTable"></div>


                </div>

            </div>
        </div>


    </div>
</div>

<script src="~/js/school-manager/enquiries/students-by-nationality.js" asp-append-version="true"></script>
