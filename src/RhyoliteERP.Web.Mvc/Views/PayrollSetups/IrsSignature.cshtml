@{
    ViewBag.Title = "IRS Signature";
    Layout = "~/Views/Shared/Layout/_adminPayrollLayout.cshtml";
}


<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Setups</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("IrsSignature","PayrollSetups")"> IRS Signature </a></li>
</ul>

<div class="content-i" id="app">
    <div class="content-box">
        <div class="element-wrapper">
            <h6 class="element-header"> IRS Signature </h6>
            <div class="element-box">
                <div class="table-responsive" style="height:auto;width:auto;min-height:500px;">

                    <div class="row">

                        <div class="col-sm-1">  </div>

                        <div class="col-sm-3">

                            <div class="form-group">
                                <label> <b> Name: </b> </label>
                                <input type="text" class="form-control" v-model="name" placeholder="Name">
                            </div>

                            <div class="form-group">
                                <label> <b> Title: </b> </label>
                                <input type="text" class="form-control" v-model="title" placeholder="Title">

                            </div>

                            <button type="button" :disabled="isLoading" v-on:click="createOrUpdateIrsSignature()" class="alignright btn btn-primary mt-3">
                                Submit

                                <div class="spinner-border" v-if="isLoading" role="status" aria-hidden="true" style="width: 20px; height: 20px"></div>

                            </button>

                        </div>

                    </div>

                </div>

            </div>
        </div>

    </div>
</div>

<script src="~/js/payroll/setups/irs-signature.js" asp-append-version="true"></script>