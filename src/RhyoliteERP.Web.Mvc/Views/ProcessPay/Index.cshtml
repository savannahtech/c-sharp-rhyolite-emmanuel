@{
    ViewBag.Title = "Process Pay";
    Layout = "~/Views/Shared/Layout/_adminPayrollLayout.cshtml";
}


<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="#"> Process Pay </a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Index","ProcessPay")"> Process Pay </a></li>
</ul>

<div class="content-i" id="app">
    <div class="content-box">
        <div class="element-wrapper">
            <h6 class="element-header"> Process Pay </h6>
            <div class="element-box">
                <div class="table-responsive" style="height:auto;width:auto;min-height:500px;">

                    <div class="row">

                        <div class="col-sm-2"></div>

                        <div class="col-sm-2">

                            <div class="form-group">
                                <label>  Month: </label>

                                <select disabled class="form-control mb-3" v-model="month">
                                    <option value="1"> January </option>
                                    <option value="2"> February </option>
                                    <option value="3"> March </option>
                                    <option value="4"> April </option>
                                    <option value="5"> May </option>
                                    <option value="6"> June </option>
                                    <option value="7"> July </option>
                                    <option value="8"> August </option>
                                    <option value="9"> September </option>
                                    <option value="10"> October </option>
                                    <option value="11"> November </option>
                                    <option value="12"> December </option>
                                </select>

                            </div>

                        </div>

                        <div class="col-sm-2">

                            <div class="form-group">
                                <label>  Year: </label>
                                <input type="number" readonly class="form-control" name="year" value="@DateTime.Now.Year" placeholder="@DateTime.Now.Year">
                            </div>
                        </div>


                        <div class="col-sm-3">

                            <div class="form-group">
                                <br />
                                <button type="button" :disabled="isLoading" class="alignright btn btn-primary mt-2" v-on:click="processPay()">

                                    {{processingText}}

                                    <div class="spinner-border" v-if="isLoading" role="status" aria-hidden="true" style="width: 20px; height: 20px"></div>

                                </button>

                            </div>

                        </div>

                    </div>
                     

                     <fieldset class="form-group">
                       <legend><span> Payroll results </span></legend>

                        <div id="dataTable"></div>

                    </fieldset>

                </div>
                
            </div>
        </div>

    </div>
</div>

<script src="~/libs/vuelidate/vuelidate.min.js"></script>
<script src="~/libs/vuelidate/validators.min.js"></script>

<script src="~/js/payroll/process-pay/index.js" asp-append-version="true"></script>