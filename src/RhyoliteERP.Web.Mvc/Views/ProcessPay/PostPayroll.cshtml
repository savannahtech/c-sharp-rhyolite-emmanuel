@{
    ViewBag.Title = "Post Payroll";
    Layout = "~/Views/Shared/Layout/_adminPayrollLayout.cshtml";
}

<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="#"> Process Pay </a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("PostPayroll","ProcessPay")"> Post Payroll </a></li>
</ul>

<div class="content-i" id="app">
    <div class="content-box">
        <div class="element-wrapper">
            <h6 class="element-header"> Process Pay </h6>
            <div class="element-box">
                <div class="table-responsive" style="height:auto;width:auto;min-height:500px;">


                    <div class="row">

                        <div class="col-sm-1">  </div>

                        <div class="col-sm-3">

                            <div class="form-group">
                                <label> <b> Month: </b>  </label>
                                <select disabled class="form-control mb-3" v-model="month">

                                    <option value="1"> January </option>
                                    <option value="2"> February </option>
                                    <option value="3"> March </option>
                                    <option value="4"> April </option>
                                    <option value="5"> May </option>
                                    <option value="6"> June </option>
                                    <option value="7"> July </option>
                                    <option value="8"> August </option>
                                    <option value="9"> September </option>
                                    <option value="10"> October </option>
                                    <option value="11"> November </option>
                                    <option value="12"> December </option>
                                </select>

                            </div>

                            <div class="form-group">
                                <label> <b> Year: </b> </label>
                                <input type="number" readonly class="form-control" v-model="year" placeholder="@DateTime.Now.Year" value="@DateTime.Now.Year">
                            </div>

                            <button type="button" :disabled="isLoading" v-on:click="postPay()" class="alignright btn btn-primary mt-3">

                                Post Pay

                                <div class="spinner-border" v-if="isLoading" role="status" aria-hidden="true" style="width: 20px; height: 20px"></div>

                            </button>

                        </div>

                    </div>



                </div>

            </div>
        </div>

    </div>
</div>


<script src="~/js/payroll/process-pay/post-pay.js" asp-append-version="true"></script>