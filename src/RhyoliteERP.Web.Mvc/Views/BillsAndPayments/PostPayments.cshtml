@{
    ViewBag.Title = "Bills & Payments | Post Payments";
    Layout = "~/Views/Shared/Layout/_adminSchLayout.cshtml";
}


<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="#"> Bills & Payments </a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("PostPayments","BillsAndPayments")"> Post Payments </a></li>
</ul>

<div class="content-i" id="app">
    <div class="content-box">
        <div class="element-wrapper">
            <h6 class="element-header"> Post Payments </h6>
            <div class="element-box">
                <div class="table-responsive" style="height:auto;width:auto;min-height:412px;">


                     <div class="row">

                            <div class="col-sm-1"></div>

                            <div class="col-sm-3">

                                <div class="form-group">
                                <label> <strong> Academic Year: </strong>  </label>
                                    <select class="form-control mb-3" v-model="selectedAcademicYearId" v-on:change="getPayments()">
                                        <option value="">Select Academic Year</option>
                                        <option :value="academicYear.id" v-for="academicYear in academicYearList"> {{academicYear.name}} </option>
                                    </select>

                                </div>

                            </div>

                            <div class="col-sm-2">

                                <div class="form-group">
                                <label> <strong> Term: </strong>  </label>
                                    <select class="form-control mb-3" v-model="selectedTermId" v-on:change="getPayments()">
                                        <option value="">Select Term </option>
                                        <option :value="term.id" v-for="term in termList"> {{term.name}} </option>
                                    </select>


                                </div>

                            </div>


                            <div class="col-sm-3">

                                <div class="form-group">
                                <label> <strong> Class </strong> : </label>
                                    <select class="form-control mb-3" v-model="selectedClassId" v-on:change="getPayments()">
                                        <option value="">Select Class</option>
                                        <option :value="schClass.id" v-for="schClass in classList"> {{schClass.className}} </option>
                                    </select>

                                </div>

                            </div>

                            <div class="col-sm-2">

                                <div class="form-group">
                                    <br />
                                    <button type="button" :disabled="isLoading" class="btn btn-primary mr-2 mt-2" v-on:click="postPayments()">
                                        Post

                                        <i class="fa fa-spinner fa-spin" v-if="isLoading"></i>

                                    </button>

                                </div>

                            </div>

                        </div>

                        <hr />
                        <div id="dataTable"></div>


                </div>

            </div>
        </div>


    </div>
</div>

<script src="~/js/school-manager/billspayment/post-payments.js" asp-append-version="true"></script>
