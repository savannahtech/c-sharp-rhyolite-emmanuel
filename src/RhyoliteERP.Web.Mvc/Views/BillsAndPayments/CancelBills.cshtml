@{
    ViewBag.Title = "Bills & Payments | Cancel Bills";
    Layout = "~/Views/Shared/Layout/_adminSchLayout.cshtml";
}


<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Cancel Bills</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("CancelBills","BillsAndPayments")"> Cancel Bills </a></li>
</ul>

<div class="content-i" id="app">
    <div class="content-box">
        <div class="element-wrapper">
            <h6 class="element-header"> Cancel Bills </h6>
            <div class="element-box">
                <div class="table-responsive" style="height:auto;width:auto;min-height:412px;">


                    <div class="row">

                        <div class="col-sm-2">

                            <div class="form-group">
                                <label> <strong> Academic Year: </strong>  </label>
                                <select class="form-control mb-3" v-model="selectedAcademicYearId" v-on:change="getBills()">
                                    <option value="">Select Academic Year </option>
                                    <option :value="academicYear.id" v-for="academicYear in academicYearList"> {{academicYear.name}} </option>
                                </select>

                            </div>

                        </div>

                        <div class="col-sm-2">

                            <div class="form-group">
                                <label> <strong> Term: </strong>  </label>
                                <select class="form-control mb-3" v-model="selectedTermId" v-on:change="getBills()">
                                    <option value="">Select Term </option>
                                    <option :value="term.id" v-for="term in termList"> {{term.name}} </option>
                                </select>

                            </div>

                        </div>

                        <div class="col-sm-3">

                            <div class="form-group">
                                <label> <strong> Class: </strong>  </label>
                                <select class="form-control mb-3" v-model="selectedClassId" v-on:change="getBills()">
                                    <option value="">Select Class</option>
                                    <option :value="schClass.id" v-for="schClass in classList"> {{schClass.className}} </option>
                                </select>

                            </div>

                        </div>

                        <div class="col-sm-3">

                            <div class="form-group">
                                <label> <strong> Bill Types: </strong>  </label>
                                <select class="form-control mb-3" v-model="selectedBillTypeId" v-on:change="getBills()">
                                    <option value=""> Select Bill Type </option>
                                    <option :value="billType.id" v-for="billType in billTypeList"> {{billType.name}} </option>
                                </select>

                            </div>

                        </div>

                        <div class="col-sm-2">

                            <div class="form-group">
                                <br />
                                <button type="button" :disabled="isLoading || !selectedAcademicYearId || !selectedTermId || !selectedClassId || !selectedBillTypeId" v-on:click="cancelBills()" class="alignright btn btn-danger mt-2">

                                    Cancel

                                    <i class="fa fa-spinner fa-spin" v-if="isLoading"></i>

                                </button>

                            </div>

                        </div>
                    </div>

                    <hr />
                    <div id="dataTable"></div>



                </div>

            </div>
        </div>


    </div>
</div>



<script src="~/js/school-manager/billspayment/cancel-bills.js" asp-append-version="true"></script>
