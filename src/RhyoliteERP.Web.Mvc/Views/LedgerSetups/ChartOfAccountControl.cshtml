@{
    ViewBag.Title = "Chart of Accounts Control";
    Layout = "~/Views/Shared/Layout/_adminLedgerLayout.cshtml";
}


<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Setups</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("ChartOfAccountControl","LedgerSetups")"> Chart of Accounts Control </a></li>
</ul>

<div class="content-i" id="app">
    <div class="content-box">
        <div class="element-wrapper">
            <h6 class="element-header"> Chart of Accounts Control </h6>
            <div class="element-box">
                <div class="table-responsive" style="height:auto;width:auto;min-height:412px;">


                    <div class="row">

                        <div class="col-sm-3">
                        </div>

                        <div class="col-sm-3">

                            <div class="form-group">
                                <label> Chart of Account: </label>
                                <select class="form-control" v-model="selectedAccountGroupId" v-on:change="getChartOfAccountControlByAccountGroup()">
                                    <option value=""> Select Chart of Account </option>
                                    <option :value="coa.id" v-for="coa in coaHierachyList"> {{coa.name}} </option>
                                </select>
                                
                            </div>

                        </div>


                    </div>
                    <hr />
                    <div class="row">

                        <div class="col-sm-3">

                            <div class="form-group">
                                <label> Account Header Name: </label>
                                <input type="text" class="form-control" name="AccountHeaderName" v-model="accountHeaderName" placeholder="Account Header Name">

                            </div>

                        </div>

                        <div class="col-sm-2">

                            <div class="form-group">
                                <label> Min. Account No: </label>
                                <input type="number" class="form-control" name="MinAccount" v-model="minAccount" placeholder="Min. Account No">
                                 
                            </div>

                        </div>

                        <div class="col-sm-2">

                            <div class="form-group">
                                <label> Max. Account No: </label>

                                <input type="number" class="form-control" name="MaxAccount" v-model="maxAccount" placeholder="Max. Account No">
                                
                            </div>

                        </div>

                        <div class="col-sm-4">

                            <div class="form-group">
                                <label> Parent Account: </label>
                                <select class="form-control" v-model="parentAccountHeaderId">
                                    <option value=""> Parent Account </option>
                                    <option :value="coaControl.id" v-for="coaControl in coaControlHierachyList"> {{coaControl.accountControlHierachyName}} </option>
                                </select>
                            </div>

                        </div>


                        <div class="col-sm-1">
                            <div class="form-group">
                                <br />
                                <button type="button" v-on:click="saveCoaControl()" class="btn btn-primary mt-2"> Save </button>

                            </div>

                        </div>

                    </div>

                    <hr />

                    <div id="dataTable"></div>


                  
                </div>

            </div>
        </div>


    </div>
</div>

<script src="~/js/gl/setups/chart-of-account-control.js"></script>