@{
    ViewBag.Title = "Chart of Accounts";
    Layout = "~/Views/Shared/Layout/_adminLedgerLayout.cshtml";
}


<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Setups</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("ChartOfAccounts","LedgerSetups")"> Chart of Accounts </a></li>
</ul>

<div class="content-i" id="app">
    <div class="content-box">
        <div class="element-wrapper">
            <h6 class="element-header"> Chart of Accounts </h6>
            <div class="element-box">
                <div class="table-responsive" style="height:auto;width:auto;min-height:412px;">


                    <div class="row">

                        <div class="col-sm-2">
                        </div>

                        <div class="col-sm-3">

                            <div class="form-group">
                                <label> <strong> Chart of Account: </strong> </label>
                                <input type="text" class="form-control" v-model="name" id="name" placeholder="Chart of Account Name">

                            </div>

                        </div>

                        <div class="col-sm-3">

                            <div class="form-group">
                                <label> <strong> Parent Hierachy: </strong>  </label>
                                <select class="form-control" v-model="parentId" type="text">
                                    <option value=""> Select Parent Hierachy </option>
                                    <option :value="coa.id" v-for="coa in coaHierachyList"> {{coa.name}} </option>
                                </select>
                            </div>

                        </div>

                        <div class="col-sm-2 mt-2">
                            <div class="form-group">
                                <br />
                                <button type="button" v-on:click="saveCoa()" :disabled="isLoading" class="btn btn-primary">
                                    Save

                                    <i class="fa fa-spinner fa-spin" v-if="isLoading"></i>
                                </button>

                            </div>

                        </div>

                    </div>
                    <hr />

                    <div id="dataTable"></div>
                </div>

            </div>
        </div>


    </div>
</div>

<script src="~/js/gl/setups/chart-of-account.js"></script>