@using RhyoliteERP
@using Abp.Authorization.Users
@using Abp.Web.Security.AntiForgery
@inject IAbpAntiForgeryManager AbpAntiForgeryManager
@{
    ViewBag.Title = "Profile";
    AbpAntiForgeryManager.SetCookie(Context);
    Layout = "~/Views/Shared/Layout/_adminTenantLayout.cshtml";
}


<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="#"> Manage </a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Profile","Manage")"> Profile </a></li>
</ul>

<div class="content-i" id="app">
    <div class="content-box" style="height: auto; width: auto; min-height: 655px;">
        <div class="row pt-4">
            <div class="col-sm-12">
                <div class="element-wrapper">
                    <h6 class="element-header"> Profile </h6>
                    <div class="element-box">

                        <div class="table-responsive" style="height:auto;width:auto;min-height:412px;">

                            <div class="row">

                                <div class="col-sm-1">  </div>

                                <div class="col-sm-4">

                                    <div class="form-group">
                                        <label> <strong> First Name: </strong>  </label>
                                        <input type="text" class="form-control" v-model="name" ref="name" placeholder="First Name">
                                        <span class="text-danger" v-if="!$v.name.required && $v.name.$dirty"> First name field is required </span>

                                    </div>

                                    <div class="form-group">
                                        <label> <strong> Username: </strong> </label>
                                        <input type="text" class="form-control" v-model="userName" :readonly="userName == 'admin'" ref="userName" placeholder="Username">
                                        <span class="text-danger" v-if="!$v.userName.required && $v.userName.$dirty"> Username field is required </span>

                                    </div>

                                    <div class="form-group">
                                        <label> <strong> Phone Number: </strong> </label>
                                        <input type="text" class="form-control" v-model="phoneNumber" ref="phoneNumber" placeholder="Phone Number">

                                    </div>

                                </div>

                                <div class="col-sm-4">

                                    <div class="form-group">
                                        <label> <strong> Last Name: </strong> </label>
                                        <input type="text" class="form-control" v-model="surname" ref="surname" placeholder="Last Name">
                                        <span class="text-danger" v-if="!$v.surname.required && $v.surname.$dirty"> Last name field is required </span>

                                    </div>
                                    <div class="form-group">
                                        <label> <strong> Email: </strong>  </label>
                                        <input type="text" class="form-control" v-model="emailAddress" ref="emailAddress" placeholder="Email">
                                        <span class="text-danger" v-if="!$v.emailAddress.required && $v.emailAddress.$dirty"> Email field is required </span>

                                    </div>

                                    <div class="form-group">
                                        <button type="button" v-on:click="updateProfile()" :disabled="isLoading" style="float: right" class="btn btn-primary mt-4">
                                           
                                            Update

                                        </button>

                                    </div>

                                </div>

                            </div>


                        </div>
                       

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/libs/vuelidate/vuelidate.min.js"></script>
<script src="~/libs/vuelidate/validators.min.js"></script>

<script src="~/js/manage/profile.js" asp-append-version="true"></script>