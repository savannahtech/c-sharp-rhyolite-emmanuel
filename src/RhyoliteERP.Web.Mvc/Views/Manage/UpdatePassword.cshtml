@using RhyoliteERP
@using Abp.Authorization.Users
@using Abp.Web.Security.AntiForgery
@inject IAbpAntiForgeryManager AbpAntiForgeryManager
@{
    ViewBag.Title = "Profile";
    AbpAntiForgeryManager.SetCookie(Context);
    Layout = "~/Views/Shared/Layout/_adminTenantLayout.cshtml";
}

<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="#"> Manage </a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Profile","Manage")"> Change Password </a></li>
</ul>

<div class="content-i" id="app">
    <div class="content-box" style="height: auto; width: auto; min-height: 655px;">
        <div class="row pt-4">
            <div class="col-sm-12">
                <div class="element-wrapper">
                    <h6 class="element-header"> Change Password </h6>
                    <div class="element-box">

                        <div class="table-responsive" style="height:auto;width:auto;min-height:412px;">

                           <div class="row">

                                <div class="col-sm-1">  </div>

                                <div class="col-sm-4">

                                    <div class="form-group">
                                        <label> <strong> Current Password: </strong>  </label>
                                        <input type="password" class="form-control" v-model="currentPassword" ref="currentPassword" required maxlength="@AbpUserBase.MaxPlainPasswordLength">
                                        <span class="text-danger" v-if="!$v.currentPassword.required && $v.currentPassword.$dirty"> Current Password field is required </span>

                                    </div>

                                    <div class="form-group">
                                        <label> <strong> New Password: </strong>  </label>
                                        <input type="text" class="form-control" v-model="newPassword" ref="newPassword" required maxlength="@AbpUserBase.MaxPlainPasswordLength">
                                        <span class="text-danger" v-if="!$v.newPassword.required && $v.newPassword.$dirty"> New Password field is required </span>

                                    </div>

                                <div class="form-group">
                                    <label> <strong> Confirm New Password: </strong>  </label>
                                    <input type="text" class="form-control" v-model="confirmNewPassword" ref="confirmNewPassword" required maxlength="@AbpUserBase.MaxPlainPasswordLength">
                                    <span class="text-danger" v-if="!$v.confirmNewPassword.required && $v.confirmNewPassword.$dirty"> Confirm New Password is required </span>

                                </div>

                </div>

            </div>
                        <div class="row">
                            <div class="col-sm-1">  </div>
                            <div class="col-sm-5">
                                <button type="button" class="btn btn-primary" :disabled="isLoading" v-on:click="updatePassword()">
                                    Update

                                </button>

                            </div>


                        </div>


                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/libs/vuelidate/vuelidate.min.js"></script>
<script src="~/libs/vuelidate/validators.min.js"></script>

<script src="~/js/manage/update-password.js" asp-append-version="true"></script>