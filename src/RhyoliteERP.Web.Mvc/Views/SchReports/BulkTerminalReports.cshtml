@{
    ViewBag.Title = "Reports | Request Bulk Results";
    Layout = "~/Views/Shared/Layout/_adminSchLayout.cshtml";
}


<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Reports</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("BulkTerminalReports","SchReports")"> Request Bulk Results </a></li>
</ul>

<div class="content-i" id="app">
    <div class="content-box">
        <div class="element-wrapper">
            <h6 class="element-header"> Request Bulk Results </h6>
            <div class="element-box">
                <div class="table-responsive" style="height:auto;width:auto;min-height:500px;">


                    <div class="row">

                        <div class="col-sm-2">  </div>

                        <div class="col-sm-4">

                            <div class="form-group">
                                <label> <strong> Academic Year: </strong>  </label>
                                <select class="form-control mb-3" v-model="selectedAcademicYearId">
                                    <option value="">Select Academic Year</option>
                                    <option :value="academicYear.id" v-for="academicYear in academicYearList"> {{academicYear.name}} </option>
                                </select>

                            </div>

                            <div class="form-group">
                                <label> <strong> Term: </strong>  </label>
                                <select class="form-control mb-3" v-model="selectedTermId">
                                    <option value="">Select Term </option>
                                    <option :value="term.id" v-for="term in termList"> {{term.name}} </option>
                                </select>

                            </div>


                            <div class="form-group">
                                <label> <strong> Class: </strong>  </label>
                                <select class="form-control mb-3" v-model="selectedClassId" v-on:change="getResultTypes()">
                                    <option value="">Select Class</option>
                                    <option :value="schClass.id" v-for="schClass in classList"> {{schClass.className}} </option>
                                </select>

                            </div>


                        </div>

                        <div class="col-sm-4">

                            <div class="form-group">
                                <label> <strong> Subject: </strong> </label>
                                <select class="form-control mb-3" v-model="selectedSubjectId">
                                    <option value=""> Select Subject </option>
                                    <option :value="subject.id" v-for="subject in subjectList"> {{subject.name}} </option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label> <strong> Result Type: </strong>  </label>
                                <select class="form-control mb-3" v-model="selectedResultTypeId">
                                    <option value=""> Select Result Type </option>
                                    <option :value="resultType.id" v-for="resultType in resultTypeList"> {{resultType.name}} </option>
                                </select>
                            </div>


                            <div class="form-group">
                                <br />
                                <button type="button" :disabled="!selectedAcademicYearId || !selectedTermId || !selectedClassId || isLoading || !selectedSubjectId || !selectedResultTypeId" v-on:click="requestBulkTerminalReports()" class="btn btn-primary mt-3" style="float: right">
                                    Request
                                    <i class="fa fa-spinner fa-spin" v-if="isLoading"></i>

                                </button>
                            </div>


                        </div>

                    </div>


                </div>

            </div>
        </div>


    </div>
</div>

<script src="~/js/school-manager/reports/request-bulk-terminal-reports.js" asp-append-version="true"></script>