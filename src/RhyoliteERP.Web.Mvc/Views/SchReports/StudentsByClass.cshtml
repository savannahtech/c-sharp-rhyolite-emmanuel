@{
    ViewBag.Title = "Reports | Students By Class";
    Layout = "~/Views/Shared/Layout/_adminSchLayout.cshtml";
}


<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Reports</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("StudentsByClass","SchReports")"> Students By Class </a></li>
</ul>

<div class="content-i" id="app">
    <div class="content-box">
        <div class="element-wrapper">
            <h6 class="element-header"> Students By Class </h6>
            <div class="element-box">
                <div class="table-responsive" style="height:auto;width:auto;min-height:500px;">

                       <div class="row">

                            <div class="col-sm-3"></div>

                            <div class="col-sm-3">

                                <div class="form-group">
                                <label> <strong> Class: </strong>  </label>
                                    <select class="form-control mb-3" v-model="selectedClassId" v-on:change="getData()">
                                        <option value="">Select Class</option>
                                        <option :value="schClass.id" v-for="schClass in classList"> {{schClass.className}} </option>
                                    </select>

                                </div>

                            </div>

                       </div>

                       <hr />

                       <div style="height:auto;width:auto;min-height:500px;" id="reportView">  </div>
                    
                </div>

            </div>
        </div>


    </div>
</div>

<script src="~/js/school-manager/reports/students-by-class.js" asp-append-version="true"></script>
